      .products-box
        %h2.products-box__name
          = @shop.name
        .map{id: "show-map", style: "height: 320px; width: 100%;"}

        .products-box__info
          %table
            %tbody
              %tr
                %th 系統
                %td
                  = @shop.type.name
              %tr
                %th 住所
                %td
                  = @shop.prefecture.name
                  = @shop.address
                  = @shop.building_name
              %tr
                %th 店の雰囲気
                %td
                  = @shop.feelings
